# Exemplo de configuração de ambiente
# Copie este arquivo para .env e configure com seus valores

# Database Configuration
DATABASE_URL="postgresql://appuser:SUA_SENHA@localhost:5432/tenant_management_db"

# Application Configuration
NODE_ENV=development
PORT=5000

# Security
SESSION_SECRET="sua-chave-secreta-muito-segura-aqui"

# Frontend Configuration
VITE_API_URL=http://localhost:5000

# Performance (opcional)
NODE_OPTIONS="--max-old-space-size=512"

# Configurações de Upload (opcional)
MAX_FILE_SIZE=10485760
UPLOAD_DIR="uploads"